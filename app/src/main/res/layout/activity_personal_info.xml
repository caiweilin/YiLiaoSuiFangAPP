<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/C0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_info_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_info_head"
            android:layout_margin="12dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/C2"
            android:text="头像"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="74dp" />
    </RelativeLayout>

    <View
        android:background="@color/C4"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:id="@+id/rl_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_info_name"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:textSize="14sp"
            android:text="张三"
            android:textColor="@color/C3"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:text="姓名"
            android:textColor="@color/C2"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />
    </RelativeLayout>

    <View
        android:background="@color/C4"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/rl_info_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_info_phone"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:textSize="14sp"
            android:text="124534234"
            android:textColor="@color/C3"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />
        <TextView
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_centerInParent="true"
            android:textColor="@color/C2"
            android:layout_alignParentLeft="true"
            android:text="电话"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/C4"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/rl_info_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_info_email"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:text="未绑定"
            android:textColor="@color/C0"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="邮箱"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/C4"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/rl_info_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_info_school"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:textSize="14sp"
            android:text="广州大学"
            android:textColor="@color/C3"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_centerInParent="true"
            android:textColor="@color/C2"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:text="地址"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/C4"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

