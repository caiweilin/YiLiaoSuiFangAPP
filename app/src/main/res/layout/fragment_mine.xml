<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearlayout0"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_mine_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_mine_info"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="72dp">

                <TextView
                    android:id="@+id/tv_mine_name"
                    android:textColor="@color/C2"
                    android:textStyle="bold"
                    android:text="刘医生"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_mine_school"
                        android:textColor="@color/C3"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"
                        android:text="广东省中医院"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_mine_group"
                        android:textColor="@color/C3"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"
                        android:text="13589999998"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_mine_head"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </RelativeLayout>
        <View
            android:background="@color/C4"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <RelativeLayout
            android:id="@+id/rl_mine_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_mine_work"
                android:layout_marginLeft="12dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="我的病人"
                android:textColor="@color/C2"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />
            <ImageView
                android:layout_marginRight="12dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_expend"
                android:layout_width="18dp"
                android:layout_height="18dp" />
        </RelativeLayout>

        <View
            android:background="@color/C4"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <RelativeLayout
            android:id="@+id/rl_mine_safe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_mine_safe"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:textSize="14sp"
                android:text="添加病人"
                android:textColor="@color/C2"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />
            <ImageView
                android:layout_marginRight="12dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_expend"
                android:layout_width="18dp"
                android:layout_height="18dp" />
        </RelativeLayout>

        <View
            android:background="@color/C4"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <RelativeLayout
            android:id="@+id/rl_mine_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_mine_settings"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="日程提醒"
                android:textColor="@color/C2"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/ic_expend" />
        </RelativeLayout>

        <View
            android:background="@color/C4"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        app:pressedTranslationZ="@dimen/fab_margin"
        android:src="@mipmap/add"
        app:fabSize="normal"/>

</RelativeLayout>
